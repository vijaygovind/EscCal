<body>
    <!--[if lt IE 8]>
             <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="">upgrade your browser</a> to improve your experience.</p>
         <![endif]-->

    <section id="mobileMenu">
        <div class="col-xs-3" onclick="openSideMenu()">
            <img id="mobileMenuIcon" class="" cursorPointer img-responsive" src="~/Content/img/header/menuicon@1x.png" data-at2x="~/Content/img/header/menuicon@2x.png">
        </div>
        <div class="col-xs-6">
            <img class="img-responsive margincenter" src="~/Content/img/header/ic_logo@1x.png" data-at2x="~/Content/img/header/ic_logo@2x.png">
        </div>
        <div class="col-xs-3">
            <img class="img-responsive pull-right" src="~/Content/img/header/konelogo@1x.png" data-at2x="~/Content/img/header/konelogo@2x.png">
        </div>
    </section>
    <section id="fullMask" onclick="closeSideMenu()"></section>
    <section id="sideMenu">
        <ul>
            <li><img onclick="closeSideMenu()" class="img-responsive cursorPointer" src="~/Content/img/header/menuicon@1x.png" data-at2x="~/Content/img/header/menuicon@2x.png"></li>

            <li>@Html.ActionLink("Home", "Index", "Home")</li>
          
         
            <li>@Html.ActionLink("Help", "Contact", "Home")</li>
        </ul>
    </section>

    <section id="desktopMenu">
        <div class="pull-left">
            <div class="desktopMenuItem"><img src="~/Content/img/header/ic_logo@1x.png" alt="Escalatorimage.png" /></div>
            <div class="desktopMenuItem">@Html.ActionLink("Home", "Index", "Home")</div>
   
            <div class="desktopMenuItem">@Html.ActionLink("Help", "Contact", "Home")</div>
        </div>
        <div class="pull-right">
            <div class="user-image"><img src="~/Content/img/User.png" alt="user.png" /></div>
            <div class="desktopMenuItem"></div>
            <div class="kone-logo"><img src="~/Content/img/header/konelogo@1x.png" /></div>
        </div>
    </section>

    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>


</body>
</html>
